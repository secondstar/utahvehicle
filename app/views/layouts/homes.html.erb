<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <title>M&amp;M Service Station</title>
    <%= stylesheet_link_tag "application" %>
    <meta name="viewport" content="initial-scale=1.0">
</head>

<header>
  <div class="wrapper">
    <%= link_to(root_path) do %><div class="logo"></div><% end %>
    
    <div class="site-title">
        <h1><%= link_to "M&M Service", root_path %></h1>
    </div>
    <div class="navigation">
        <%= link_to "Home", homes_path, class: "icon" %>
        <%= link_to "Coupons", coupons_path, class: "icon" %>
        <%= link_to "Services", services_path, class: "icon" %>
        <%= link_to "Fleet", services_path, class: "icon" %>
        <%= link_to "Location", homes_path, class: "icon" %>
        
    </div>
    <div class="mobile-menu-icon"></div>
  </div>
</header>
<div class="wrapper">
  <div class="main-content">
    <div class="intro featured-promos">
        <div class="promo">promo</div>
        <div class="promo">promo</div>
        <div class="promo">promo</div>
    </div>
    <aside class="sidebar">
        <h2><a href="/">M&amp;M Service</a></h2>
        
        <div class="sidebarlist">
            <ul>
                <p>&nbsp;</p>
                <%= render :partial => "shared/service_listing", :collection => all_services %>
            </ul>
        </div>
    </aside>
  </div>
  <div class="featured-tiles">
    <div class="tile">tile1</div>
    <div class="tile">tile2</div>
    <div class="tile">tile3</div>
    <div class="tile">tile4</div>
  </div>
</div>
